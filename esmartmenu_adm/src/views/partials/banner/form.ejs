<div class="box-body">

	<input type="hidden" name="_id" value="<%= banner.id %>">

	<div class="form-group">
		<label for="name">Nome</label>
		<input type="text" name="nome" class="form-control" placeholder="Digite o nome da categoria" value="<%= banner.nome %>" required="" data-parsley-length="[4, 20]" data-parsley-group="block-1">
	</div>
	<div class="form-group">
		<label for="image">Image</label>
		<input type="file" name="images3" class="form-control" required="">
	</div>
	<div class="form-group">
		<label for="description">Descrição</label>
		<input type="text" name="desc" class="form-control" placeholder="Insira sua descrição para o banner" value="<%= banner.desc %>" required="" data-parsley-length="[10, 40]" data-parsley-group="block-1">
	</div>
	<div class="form-group">
		<label for="">Habilitar?</label>
		<input type="checkbox" name="enable" value="<%= banner.enable %>" checked="<%= checked(banner.enable)%>">
	</div>
</div>

<div class="box-footer">
	<button type="submit" class="btn btn-primary">Salvar</button>
	<a href="/banner" class="btn btn-default">Voltar</a>
</div>