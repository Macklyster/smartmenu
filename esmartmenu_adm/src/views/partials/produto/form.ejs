<div class="box-body">
	<div class="form-group">
		<label for="nome">Nome</label>
		<input type="text" name="nome" class="form-control" placeholder="Digite o nome do produto" value="<%= produto.nome %>">
	</div>
	<div class="form-group">
		<label for="image">Image</label>
		<input type="file" name="images3" class="form-control">
	</div>
	<div class="form-group">
		<label for="descricao">Descrição</label>
		<input type="text" name="desc" class="form-control" placeholder="Insira a descrição do produto" value="<%= produto.desc %>">
	</div>
	<div class="form-group">
		<label for="preco_venda">Preço Venda</label>
		<div class="input-group">
			<span class="input-group-addon">R$</span>
			<input type="number" step="0.01" name="preco_venda" class="form-control" placeholder="Insira seu produto de preço de venda" value="<%= produto.preco_venda %>">
		</div>
	</div>
	<div class="form-group">
		<label for="desconto">Desconto</label>
		<div class="input-group">
			<input type="number" step="0.01" name="desconto" class="form-control" placeholder="Insira seu produto com desconto" value="<%= produto.desconto %>">
			<span class="input-group-addon">%</span>
		</div>
	</div>
	<div class="form-group">
		<label for="quantidade">Quantidade</label>
		<input type="number" step="0.01" name="quantidade" class="form-control" placeholder="Digite sua quantidade" value="<%= produto.quantidade %>">
	</div>
	<div class="form-group">
		<label for="categoria">Categoria</label>
		<select name="categoria" class="form-control">
			<% for (var i = 0; i < categorias.length; i++) { %>
				<option value="<%= categorias[i]._id %>"><%= categorias[i].nome %></option>
				<!--categorias[i]._id, produto.categoria._id) %>><%= categorias[i].nome %></option-->
			<% } %>
		</select>
	</div>
	<div class="form-group">
		<label for="">Habilitar?</label>
		<input type="checkbox" name="enable" value="<%= produto.enable %>" checked="<%= checked(produto.enable)%>">
	</div>
</div>

<div class="box-footer">
	<button type="submit" class="btn btn-primary">Salvar</button>
	<a href="/produto"   class="btn btn-default">Voltar</a>
</div>
