<%- contentFor('body') %>
<section class="login-box">
	<div class="login-box-body">
		<img src="/images/logo.png" alt="" class="img-responsive">
		<!--p class="login-box-msg">Enter your email and password</p-->
		<hr>
		<form action="/auth" method="POST">
			<div class="form-group">
				<label for="email">Email</label>
				<input type="email" name="email"  class="form-control" placeholder="Insira seu e-mail" >
			</div>
			<div class="form-group">
				<label for="password">Senha</label>
				<input type="password" name="senha"  class="form-control" placeholder="Coloque sua senha" >
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-block btn-primary">Acessar</button>
			</div>
		</form>
	</div>
</section>
