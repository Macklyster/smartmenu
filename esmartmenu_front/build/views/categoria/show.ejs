<%- contentFor('body') %>
    <section id="produto">
        <div class="container">
            <div class="row">
                <% for (var i = 0; i < produtos.length; i++) {%>
                    <div class="col-xs-12 col-md-4 product_item">
                        <div class="preview text-center">
                            <img src="<%= produtos[i].image %>" class="img-responsive" alt="">
                        </div>
                        <div class="info text-center">
                            <a href="/produto/<%= produtos[i].slug %>">
                                <%= produtos[i].nome %>
                            </a>
                            <div class="price">
                                <strong>R$
									<%= produtos[i].preco_venda %></strong>
                            </div>
                            <a href="/produto/<%= produtos[i].slug %>" class="btn btn-red-default">Mais Detalhes</a>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
    </section>