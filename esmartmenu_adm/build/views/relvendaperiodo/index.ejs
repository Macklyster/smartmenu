<section class="content-header">
	<h1>
		Vendas no período
		<small>Relatório</small>
	</h1>

	<ol class="breadcrumb">
		<li>
			<a href="/">
				<i class="fa fa-dashboard"></i>
			</a>
		</li>
		<li class="active">Lista de Vendas no período</li>
	</ol>
</section>
<div id="editor"></div>
<section class="content">
	<div class="row">
		<div class="col-xs-12">
			<div class="box box-primary">
				<div class="box-header">
					<h3>Filtrar</h3>
					<div class="row">
						<div class="col-xs-3">
							<div class="input-group date">
								<input id="datepickerini" name="datainicial" type="text" class="form-control" data-date-format="dd/mm/yyyy">
								<div class="input-group-addon">
									<span class="glyphicon glyphicon-th"></span>
								</div>
							</div>
						</div>
						<div class="col-xs-3">
								<div class="input-group date">								
								<input id="datepickerfim" name="datafinal" type="text" class="form-control" data-date-format="dd/mm/yyyy">
								<div class="input-group-addon">
									<span class="glyphicon glyphicon-th"></span>
								</div>
							</div>
						</div>
						<div class="col-xs-6">
							<button id="btnGerarFiltro" class="btn btn-primary btn-block">Filtrar</button>
						</div>
					</div>
				</div>
				<div class="box-body">
					<div class="table-responsive">
						<table id="relvendasnoperiodo" class="table table-hover">
							<thead>
								<tr>
									<th>Cód.Venda</th>
									<th>Cidade</th>
									<th>Data Venda</th>
									<th>Valor</th>
								</tr>
							</thead>
							<tbody>
								<% for (var i = 0; i < carrinhos.length; i++) { %>
									<tr ng-repeat="carrinhos as cards | filter: filtroproduto">
										<td>
											<%= carrinhos[i].id %>
										</td>
										<td>
											<%= carrinhos[i].cliente %>
										</td>
										<td>
											<%= carrinhos[i].criado %>
										</td>
										<td>
											<%= carrinhos[i].total %>
										</td>
									</tr>
									<% } %>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>