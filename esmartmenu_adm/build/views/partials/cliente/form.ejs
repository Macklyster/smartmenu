<div class="panel panel-default">
	<div class="panel-body">

		<div class="row">
			<hr>
			<div class="col-xs-12">
				<h4>Geral</h4>
			</div>
		</div>

		<input type="hidden" name="_id" value="<%= cliente.id %>">

		<div class="form-group">
			<label for="name">Nome</label>
			<input type="text" name="nome" class="form-control" placeholder="Digite seu nome completo" value="<%= cliente.nome %>">
		</div>

		<div class="form-group">
			<label for="email">Email</label>
			<input type="email" name="email" class="form-control" placeholder="Entre com um email válido" value="<%= cliente.email %>">
		</div>

		<div class="form-group">
			<label for="senha">Senha</label>
			<input type="password" name="senha" class="form-control" placeholder="Digite sua senha secreta" value="<%= cliente.senha %>">
		</div>

		<div class="row">
			<hr>
			<div class="col-xs-12">
				<h4>Pessoal</h4>
			</div>
		</div>
		<div class="form-group">
			<label for="name">Data Nascimento</label>
			<input type="text" name="data_nasc" class="form-control" placeholder="XX/XX/XXXXX" value="<%= cliente.data_nasc %>">
		</div>

		<div class="form-group">
			<label for="name">ID (CPF)</label>
			<input type="text" name="cpf" class="form-control" placeholder="XXX.XXX.XXX-XX" value="<%= cliente.id %>">
		</div>

		<div class="form-group">
			<label for="name">Celular</label>
			<input type="tel" name="celular" class="form-control" placeholder="(XX) XXXXX-XXXX" value="<%= cliente.celular %>">
		</div>

		<div class="row">
			<hr>
			<div class="col-xs-12">
				<h4>Entrega</h4>
			</div>
		</div>

		<div class="form-group">
			<label for="name">Rua</label>
			<input type="text" name="rua" class="form-control" placeholder="Digite o nome da sua rua" value="<%= cliente.endereco.rua %>">
		</div>

		<div class="form-group">
			<label for="name">Bairro</label>
			<input type="text" name="bairro" class="form-control" placeholder="Entre em seu bairro" value="<%= cliente.endereco.bairro %>">
		</div>

		<div class="form-group">
			<label for="name">Número</label>
			<input type="number" name="numero_entrega" class="form-control" placeholder="Coloque seu número" value="<%= cliente.endereco.numero %>">
		</div>

		<div class="form-group">
			<label for="name">Cidade</label>
			<input type="text" name="cidade" class="form-control" placeholder="Digite o nome da sua cidade" value="<%= cliente.endereco.cidade %>">
		</div>

		<div class="form-group">
			<button type="submit" class="btn btn-primary">Salvar</button>
			<a href="/cliente" class="btn btn-default">Voltar</a>
		</div>
	</div>
</div>