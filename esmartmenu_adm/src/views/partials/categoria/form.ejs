<div class="box-body">

	<input type="hidden" name="_id" value="<%= categoria.id %>">

	<div class="form-group">
		<label for="name">Nome</label>
		<input type="text" name="nome" class="form-control" placeholder="Digite o nome da categoria" value="<%= categoria.nome %>">
	</div>
	<div class="form-group">
		<label for="description">Descrição</label>
		<input type="text" name="desc" class="form-control" placeholder="Insira sua descrição para a categoria" value="<%= categoria.desc %>">
	</div>
	<div class="form-group">
		<label for="">Habilitar?</label>
		<input type="checkbox" name="enable" value="<%= categoria.enable %>" checked="<%= checked(categoria.enable)%>">
	</div>
</div>

<div class="box-footer">
	<button type="submit" class="btn btn-primary">Salvar</button>
	<a href="/categoria"  class="btn btn-default">Voltar</a>
</div>
